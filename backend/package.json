{
  "name": "stackslend-backend",
  "version": "1.0.0",
  "description": "Backend API and event monitoring service for StacksLend - a decentralized lending protocol on Stacks blockchain",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "stacks",
    "blockchain",
    "defi",
    "lending",
    "chainhook",
    "backend",
    "api"
  ],
  "author": "StacksLend",
  "license": "MIT",
  "dependencies": {
    "@hirosystems/chainhook-client": "^2.4.0",
    "express": "^4.18.2",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.20",
    "@types/node": "^20.9.0",
    "@types/cors": "^2.8.15",
    "@types/ws": "^8.5.8",
    "typescript": "^5.2.2",
    "ts-node-dev": "^2.0.0",
    "eslint": "^8.53.0",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "prettier": "^3.0.3",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.7"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
